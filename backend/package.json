{
  "name": "@opengovsg/ts-template",
  "version": "1.0.0",
  "description": "A template for most TypeScript projects in OGP",
  "main": "server/build/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "lint-staged": "lint-staged",
    "test": "echo 'No tests implemented'",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only --inspect -- src/index.ts",
    "start": "node build/index.js"
  },
  "author": "Open Government Products, GovTech Singapore (https://open.gov.sg)",
  "license": "MIT",
  "devDependencies": {
    "@types/convict": "^6.1.1",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.1",
    "@types/ssh2": "^0.5.48",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "axios": "^0.22.0",
    "convict": "^6.2.0",
    "cronitor": "^2.2.3",
    "nodemailer": "^6.7.0",
    "pg": "^8.7.1",
    "ssh2": "^1.5.0"
  }
}
