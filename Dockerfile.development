FROM node:12-alpine3.9
LABEL maintainer="Open Government Products"
WORKDIR /usr/src/app
RUN apk update && apk add python g++ make tini && rm -rf /var/cache/apk/*
COPY . ./
# Install backend dependencies
RUN cd backend && npm ci && cd ..

ENTRYPOINT ["tini", "--"]
CMD ["npm", "run", "dev"]

# Webpack dev server
EXPOSE 3000

# Backend API
EXPOSE 8080
